doctype html
html(lang="en")
    head
        include includes/head.pug
        script(src="../scripts/tourist.js" defer)

    body.background
        div.container
            div.columns
                div.column.col-12
                    include includes/tabTAttractions
                    include includes/translator.pug
        div.container
            div.columns
                div.column.col-1
                div.column.col-1
                div.column.col-7.text-right
                    div.filter
                        input#tag-0.filter-tag(type='radio' name='filter-radio' hidden='' checked='')
                        input#tag-1.filter-tag(type='radio' name='filter-radio' hidden='')
                        input#tag-2.filter-tag(type='radio' name='filter-radio' hidden='')
                        input#tag-3.filter-tag(type='radio' name='filter-radio' hidden='')
                        input#tag-4.filter-tag(type='radio' name='filter-radio' hidden='')
                        input#tag-5.filter-tag(type='radio' name='filter-radio' hidden='')
                        input#tag-6.filter-tag(type='radio' name='filter-radio' hidden='')

                        div.filter-nav
                            label.chip(for='tag-0') All
                            label.chip(for='tag-1') Food & Drink
                            label.chip(for='tag-2') Things To Do
                            label.chip(for='tag-3') Services
                            label.chip(for='tag-4') Hotels
                            label.chip(for='tag-5') Purchases
                            label.chip(for='tag-6') Others

                div.column.col-3.text-right
                    section.navebar-section.searchBar.searchBar1
                        div.input-group.input-inline
                            input.form-input(type="text", placeholder="Search ..." name="search")
                            button.btn.btn-primary.input-group-btn
                                i.icon.icon-search



        div.container
            div.columns
                div.column.col-1
                div.column.col-10
                    div.container
                        div.columns.mt-2
                            div.column.col-12.my-2.col-sm-12.col-md-12

                                for n in attractions

                                    div.card.mt-2
                                        div.columns
                                            div.column.col-3.col-sm-12.col-md-12
                                                div.card-image
                                                    img.img-responsive(src=n.Image_Src, alt=n.Business_Name)

                                            div.column.col-6.col-sm-12.col-md-12
                                                div.card-header
                                                    div.card-title.h4
                                                        p !{n.Business_Name}

                                                div.card-body

                                                    p
                                                        b Description :
                                                        |  !{n.Business_Desc}

                                                    p
                                                        b Location :
                                                        |  !{n.Business_Location}

                                            div.column.col-3.col-sm-12.col-md-12
                                                div.card-body.vl
                                                    p
                                                        b Estimate Payment :
                                                        |  !{n.Business_Price}
                                                    p
                                                        b Rating :
                                                        |  !{n.Business_Rating}

                                                        form.form-input.star-rating(method="post" action='/rating')
                                                            input#star5(type='radio' name='businessRating' value='5' onclick='this.form.submit()')
                                                            label(for='star5' title='text') 5 stars
                                                            input#star4(type='radio' name='businessRating' value='4' onclick='this.form.submit()')
                                                            label(for='star4' title='text') 4 stars
                                                            input#star3(type='radio' name='businessRating' value='3' onclick='this.form.submit()')
                                                            label(for='star3' title='text') 3 stars
                                                            input#star2(type='radio' name='businessRating' value='2' onclick='this.form.submit()')
                                                            label(for='star2' title='text') 2 stars
                                                            input#star1(type='radio' name='businessRating' value='1' onclick='this.form.submit()')
                                                            label(for='star1' title='text') 1 star

                                                            input(hidden, value=n.Owners_Name name='ownersName')
                                                            input(hidden, value=n.Business_Name name='businessName')
                                                            input(hidden, value=n.Business_Type name='businessType')
                                                            input(hidden, value=n.Business_Desc name='businessDesc')
                                                            input(hidden, value=n.Business_Price name='businessPrice')
                                                            input(hidden, value=n.Business_Location name='businessLoc')


                div.column.col-1
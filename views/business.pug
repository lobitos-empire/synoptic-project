doctype html
html(lang="en")
    head
        include includes/head.pug

    body.background
        div.container
            div.columns
                div.column.col-12
                    include includes/tabLBusiness.pug
                    include includes/spanish.pug

        div.container
            div.columns
                div.column.col-1
                div.column.col-1
                div.column.col-7.text-right
                    div.filter
                        input#tag-0.filter-tag(type='radio' name='filter-radio' hidden='' checked='')
                        input#tag-1.filter-tag(type='radio' name='filter-radio' hidden='')
                        input#tag-2.filter-tag(type='radio' name='filter-radio' hidden='')
                        input#tag-3.filter-tag(type='radio' name='filter-radio' hidden='')
                        input#tag-4.filter-tag(type='radio' name='filter-radio' hidden='')
                        input#tag-5.filter-tag(type='radio' name='filter-radio' hidden='')
                        input#tag-6.filter-tag(type='radio' name='filter-radio' hidden='')

                        div.filter-nav
                            label.chip(for='tag-0') All
                            label.chip(for='tag-1') Food & Drink
                            label.chip(for='tag-2') Things To Do
                            label.chip(for='tag-3') Services
                            label.chip(for='tag-4') Hotels
                            label.chip(for='tag-5') Purchases
                            label.chip(for='tag-6') Others

                        //div.filter-body

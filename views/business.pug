doctype html
html(lang="en")
    head

        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" type="text/css" href="../styles/spectre.min.css")
        link(rel="stylesheet" type="text/css" href="../styles/style.css")
        link(rel="stylesheet" type="text/css" href="../styles/spectre.icon.css")
        title #{ title }

    body
        div.container
            div.columns
                div.column.col-12
                    include includes/tabLBusiness
        div.container
            div.columns
                div.column.col-12
                    div.card.my-2
                        div.columns.col-sm-12
                            div.column.col-2.col-sm-12(class="imagecolumn")
                                div.card-image.fillParentDiv
                                    img(src="../images/smallerCycling.png", alt="Cycling").img-responsive.fillParentDivForImage
                            div.column.col-7.col-sm-12
                                div.card-body
                                    p Owner Name:
                                        b
                                    p Owner Business Name:
                                        b
                                    p Business Type:
                                        b
                                    p Business Description:
                                        b

                            div.column.col-3
                                div.card-body
                                    p Number of Clicks:
                                        b

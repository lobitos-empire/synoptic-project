doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" type="text/css" href="../styles/spectre.min.css")
        link(rel="stylesheet" type="text/css" href="../styles/style.css")
        title #{ title }

    body.backgroundimage(class='touristBackground')
        div.container
            div.columns
                div.column.col-12
                    a(href="/index")
                    h3(class='TouristHeader') Tourists
                    img.logo1(src="../images/logo1.png", alt="Logo")

        div.move
            div.columns
                div.column.col-3
                    div.card(class='hottestCard')
                        div.card-image
                            img.img-responsive(src='../images/localBusiness.jpg',alt="Image of local businesses")
                        div.card-header
                            div.card-title.h5 Hottest
                            div.card-subtitle.text-black Explore local businesses in Lobitos

                div.column.col-3
                    div.card(class='attractionCard')
                        div.card-image
                            img.img-responsive(class= 'attractionImg', src='../images/hotels.png',alt="Image of attractions")
                        div.card-header
                            div.card-title.h5 Attractions
                            div.card-subtitle.text-black Explore Attractions in Lobitos

                div.column.col-3
                    div.card(class='hotelsCard')
                        div.card-image
                            img.img-responsive(src='../images/hotels.png',alt="Image of hotel")
                        div.card-header
                            div.card-title.h5 Hotels
                            div.card-subtitle.text-black Explore Hotels in Lobitos

        div.move(class='movePhraseCard')
            div.column.col-4.col-sm-12.my-2
                div.card(class='spanishPhraseCard2')
                    div.card-header
                        div.card-title.h5 Spanish Phrases
                    div.card-body
                        p Greeting! ~  Hello = Hola | Hello = Hola | Hello = Hola
                        p Greeting! ~  Hello = Hola | Hello = Hola | Hello = Hola

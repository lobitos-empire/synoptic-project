doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" type="text/css" href="../styles/spectre.min.css")
        link(rel="stylesheet" type="text/css" href="../styles/style.css")
        title #{ title }

    body.background

        div.container
            div.columns
                div.column.col-6
                    a(href="/")
                        img.logo1(src="../images/logo1.png", alt="Logo")

                div.column.col-6
                    h3.header Tourists
                    include includes/translator.pug


        div.move
            div.container
                div.columns
                    div.column.col-4.col-sm-12.my-2
                        div.card.hottestCard
                            div.card-image
                                a(href='/hottest')
                                    img.img-responsive(src="../images/localBusiness.jpg", alt="Hottest")
                            div.card-header
                                div.card-title.h3 Hottest
                                div.card-subtitle.text-black Explore local businesses in Lobitos


                    div.column.col-4.col-sm-12.my-2
                        div.card.attractionCard
                            div.card-image
                                a(href='/attractions')
                                    img.img-responsive(src="../images/hotels.png", alt="Explore local business")
                            div.card-header
                                div.card-title.h4 Attractions
                                div.card-subtitle.text-black Explore Attractions in Lobitos


                    div.column.col-4.col-sm-12.my-2
                        div.card.hotelsCard
                            div.card-image
                                a(href='/hotels')
                                    img.img-responsive(src="../images/hotels.png", alt="Explore new markets")
                            div.card-header
                                div.card-title.h4 Hotels
                                div.card-subtitle.text-black Explore Hotels in Lobitos
            div.container
                div.columns
                    div.column.col-12.col-sm-12.my-2
                        div.card.spanishPhraseCard2
                            div.card-header
                                div.card-title.h3 Spanish Phrases
                                //Creating a search bar for users to search phrases that are not on the spanish phrase card
                                section.navbar-section(class="searchBar")
                                    form(action="/tourist" method="get")
                                        div.input-group.input-inline
                                            input.form-input(type="text", placeholder="search phrases" name="search")
                                            button.btn.btn-primary.input-group-btn
                                                i.icon.icon-search
                            div.card-body
                                // creating table to add spanish and english phrases within the card-body
                                table.table.table-striped
                                    thead
                                        tr
                                            th Category
                                            th English
                                            th Spanish
                                    tbody
                                        each n in translations
                                            tr
                                                td=n.category
                                                td=n.english
                                                td=n.spanish


doctype html
html(lang="en")
    head

        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" type="text/css" href="../styles/spectre.min.css")
        link(rel="stylesheet" type="text/css" href="../styles/style.css")
        link(rel="stylesheet" type="text/css" href="../styles/spectre.icon.css")
        title #{ title }

    body.background
        div.container
            div.columns
                div.column.col-12
                    include includes/tabL.pug
            form.form-horizontal
                div.form-group
                    div.col-3.col-sm-12
                        label.form-label Nombre Del Dueño
                    div.col-5.col-sm-12
                        input.form-input(type="text" placeholder="Nombre Del Dueño" id="ownername")
                div.form-group
                    div.col-3.col-sm-12
                        label.form-label Nombre del Negocio
                    div.col-5.col-sm-12
                        input.form-input(type="text" placeholder="Nombre del Negocio" id="businessname")
                div.form-group
                    div.col-3.col-sm-12
                        label.form-label Tipo de negocio
                    div.col-5.col-sm-12
                        select.form-select
                            option Comidas y bebidas
                            option Cosas para hacer
                            option Servicios
                            option Hoteles
                            option Compras
                            option Otra
                div.form-group
                    div.col-3.col-sm-12
                        label.form-label Descripción del Negocio
                    div.col-9.col-sm-12
                        textarea.form-input(placeholder="Business Description" rows="3")





